<main class="pj-container">
    <form action="/account/store-profile" method="post" class="default-form" enctype="multipart/form-data">
        <div class="label">
            <label for="name">Name</label>
            <input type="text" name="name" id="name">
        </div>
        <div class="label">
            <label for="email">Email</label>
            <input type="email" name="email" id="email">
        </div>
        <div class="label">
            <label for="password">Password</label>
            <input type="password" name="password" id="password">
        </div>
        <div class="label">
            <label for="repeat_password">Repeat Password</label>
            <input type="password" name="repeat_password" id="repeat_password">
        </div>
        <div class="label horizontal-center">
            <input type="submit" value="Create account" class="btn btn-blue">
        </div>
        <div class="label horizontal-center">
            <a class="horizontal-center" href="/login/create">Login</a>
        </div>
    </form>
</main>