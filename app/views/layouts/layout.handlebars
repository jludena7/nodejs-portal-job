<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Rubik:400,700,900" rel="stylesheet">
    <link rel="stylesheet" href="/css/trix.css">
    <link rel="stylesheet" href="/css/app.css?v=1">
    <title>{{getAppName}}</title>
</head>
<body>

    <div class="site-name pj-container">
        <h1>
            <a href="/">{{getAppName}}</a>
        </h1>

        {{#if bar}}
            <div class="search">
                <form action="/search" method="POST">
                    <input type="text" name="q" class="search">
                    <input type="submit" value="Search">
                </form>
            </div>
        {{/if}}
        {{#if userAuth.active}}
            <div class="close-session">
                {{#if userAuth.image}}
                    <img src="{{ pathProfileImage }}/{{userAuth.image}}" class="image-profile-min" onerror="this.src='/img/avatar-user.jpg'">
                {{/if}}
                <p>Hi! {{userAuth.name}}</p>
                <a href="/account/dashboard">Dashboard</a>
                <a href="/login/delete">Logout</a>
            </div>
        {{/if}}
    </div>

    <header class="site-header pj-container pj-separator">
        <h2>{{pageTitle}}</h2>
        {{#if tagLine}}
            <p class="tagline">{{tagLine}}</p>
        {{/if}}

        {{#if publishVacancy}}
            <a href="/job-offer/create" class="btn btn-blue">Publish Job Offer</a>
        {{/if}}
    </header>

    <div class="pj-container">
        {{#if errorValidations }}
            <div class="alerts">
                {{#showErrorValidations errorValidations }}
                    <li>do</li>
                {{/showErrorValidations}}
            </div>
        {{/if}}
        {{{body}}}
    </div>

    <script src="/js/trix.js"></script>
    <script src="/dist/bundle.js?v=1"></script>
</body>
</html>
